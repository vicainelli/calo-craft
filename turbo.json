{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**"],
      "dependsOn": ["^build"]
    },
    "lint": {},
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true,
      "inputs": [
          "apps/**/*.ts",
          "apps/**/*.tsx",
          "apps/**/*.js",
          "apps/**/*.jsx",
          "tsconfig.json",
          "tsconfig.*.json",
          "vite.config.ts",
          "package.json"
      ],
      "env": [
          "NODE_ENV",
          "PORT",
          "VITE_*"
      ]
    },
    "test": {
      "outputLogs": "full",
      "dependsOn": ["^test"],
      "inputs": [
        "apps/api/src/**/*.ts",
        "apps/api/src/**/*.test.ts",
        "apps/api/vitest.config.ts",
        "apps/api/package.json"
      ]
    }
  }
}
